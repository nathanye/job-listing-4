<div class="pull-right">
  <%= link_to("添加职位", new_admin_job_path, :class => "btn btn-default") %>
</div>

<br><br>

<table class="table table-boldered table-striped custab">
  <thead>
    <tr>
        <th> 职缺 </th>
        <th> 收到简历数量 </th>
        <th> 薪资下限 </th>
        <th> 薪资上限 </th>
        <th> 管理选项 </th>
        <th> 刊登时间 </th>
    </tr>
  </thead>

  <% @jobs.each do |job| %>
  <tr>
    <td>

      <%= render_job_status(job) %>

      <%= link_to(job.title, admin_job_path(job)) %>
    </td>
    <td> <%= link_to(job.resumes.count, admin_job_resumes_path(job)) %> </td>
    <td> <%= job.wage_lower_bound %> </td>
    <td> <%= job.wage_upper_bound %> </td>
    <td>
      <%= link_to("编辑", edit_admin_job_path(job), :class => "btn btn-xs btn-info") %>
      <%= link_to("删除", admin_job_path(job), :method => :delete, :class => "btn btn-xs btn-danger", :data => { :confirm => "你确定要删除吗？" }) %>


      <% if job.is_hidden %>

        <%= link_to("发布", publish_admin_job_path(job), :method => :post, :class => "btn btn-xs btn-success") %>
      <% else %>
        <%= link_to("隐藏", hide_admin_job_path(job), :method => :post, :class => "btn btn-xs btn-warning") %>
      <% end %>
    </td>
    <td>
      <%= job.created_at %>
    </td>
  </tr>
  <% end %>
</table>
